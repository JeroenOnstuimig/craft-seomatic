{% if trackingId is defined and trackingId %}
        (function(i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r;
            i[r] = i[r] || function() {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date();
            a = s.createElement(o),
                m = s.getElementsByTagName(o)[0];
            a.async = 1;
            a.src = g;
            m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '{{ analyticsUrl }}', 'ga');

        ga('create', '{{ trackingId |raw }}', 'auto'{% if linker %}, {allowLinker: true}{% endif %});
        {% if ipAnonymization %}
            ga('set', 'anonymizeIp', true);
        {% endif %}
        {% if displayFeatures %}
            ga('require', 'displayfeatures');
        {% endif %}
        {% if ecommerce %}
            ga('require', 'ecommerce');
        {% endif %}
        {% if enhancedEcommerce %}
            ga('require', 'ec');
        {% endif %}
        {% if enhancedLinkAttribution %}
            ga('require', 'linkid');
        {% endif %}
        {% if enhancedLinkAttribution %}
            ga('require', 'linker');
        {% endif %}
        {% if sendPageView %}
            ga('send', 'pageview');
        {% endif %}
{% endif %}
