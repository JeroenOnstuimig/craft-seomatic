    {% set tabs = {
        url: "#tab-content-identity",
        label: "Identity" |t("seomatic"),
    } %}

{% import "_includes/forms" as forms %}

{% set metaGlobalVars = value.metaGlobalVars %}
{% set metaBundleSettings = value.metaBundleSettings %}
{% set metaSitemapVars = value.metaSitemapVars %}
{% namespace name %}
<div id="{{ id }}" class="field seomatic-field">
    <nav id="{{ id ~ "tabs" }}" class="seomatic-tabs">
        <ul>
            <li><a id="{{ id ~ "-tabs-general" }}" class="seomatic-tab-links tab sel" href="#{{ nameSpacedId ~ '-tab-general' }}"  tabindex="0">General</a></li>
            <li><a id="{{ id ~ "-tabs-twitter" }}" class="seomatic-tab-links tab" href="#{{ nameSpacedId ~ '-tab-twitter' }}"  tabindex="0">Twitter</a></li>
            <li><a id="{{ id ~ "-tabs-facebook" }}" class="seomatic-tab-links tab" href="#{{ nameSpacedId ~ '-tab-facebook' }}"  tabindex="0">Facebook</a></li>
            <li><a id="{{ id ~ "-tabs-sitemap" }}" class="seomatic-tab-links tab" href="#{{ nameSpacedId ~ '-tab-sitemap' }}"  tabindex="0">Sitemap</a></li>
        </ul>
    </nav>

    {############### General tab settings ###############}

    <div id="{{ nameSpacedId ~ "-tab-general" }}" class="seomatic-tab-content">
        {% include "seomatic/settings/_includes/tab-general.twig" with {"pageContext": "field"} %}
    </div>

    {############### Twitter tab settings ###############}

    <div id="{{ nameSpacedId ~ "-tab-twitter" }}" class="seomatic-tab-content hidden">
        {% include "seomatic/settings/_includes/tab-twitter.twig" with {"pageContext": "field"} %}
    </div>

    {############### Facebook tab settings ###############}

    <div id="{{ nameSpacedId ~ "-tab-facebook" }}" class="seomatic-tab-content hidden">
        {% include "seomatic/settings/_includes/tab-facebook.twig" with {"pageContext": "field"} %}
    </div>

    {############### Sitemap tab settings ###############}

    <div id="{{ nameSpacedId ~ "-tab-sitemap" }}" class="seomatic-tab-content hidden">
        {% include "seomatic/settings/_includes/tab-sitemap.twig" with {"pageContext": "field"} %}
    </div>

</div>
{% endnamespace %}