{% set inheritedFrom = seomatic.helper.findInheritableBundle(parentBundles, "sitemapAltLinks", containerName) %}
{% set hasInheritableValues = inheritedFrom is not null %}

{% set additionalVars = {
    'isInherited': seomatic.helper.isInherited(container, "sitemapAltLinks"),
    'fieldLabel': "Sitemap Alt URLs"|t("seomatic"),
    'settingName': 'sitemapAltLinks',
    'labelFor': containerName ~ '-sitemapAltLinks',
    'overrideNamespace': namespaceName
} %}

{% embed "seomatic/settings/_includes/fields/_inheritableField.twig" with additionalVars %}
    {% macro sitemapAltLinksField(metaSitemapVars, suffix, namespaceName) %}
        <div class="instructions">
            <p>
                {{ "Whether URLs to alternate translations should be included in the sitemap"|t("seomatic") }}
            </p>
        </div>

        {% import "_includes/forms" as forms %}
        {% namespace namespaceName %}

            {{ forms.lightswitchField({
                id: "sitemapAltLinks" ~ suffix,
                name: "sitemapAltLinks",
                on: metaSitemapVars.sitemapAltLinks,
                warning: false,
                errors: metaSitemapVars.getErrors("sitemapAltLinks"),
            }) }}

        {% endnamespace %}
    {% endmacro %}

    {% block inheritedValues %}
        {{ _self.sitemapAltLinksField(attribute(inheritedFrom, containerName) ?? container, "-inherited", namespaceName) }}
    {% endblock %}

    {% block field %}
        {{ _self.sitemapAltLinksField(container, "", namespaceName) }}
    {% endblock %}
{% endembed %}
