{% from "seomatic/settings/_includes/macros.twig" import configWarning %}
{% import "_includes/forms" as forms %}

{% namespace "sitemap" %}

    {{ forms.lightswitchField({
        label: "Include in Sitemap" |t("seomatic"),
        instructions: "Whether URLs be included in the sitemap" |t("seomatic"),
        id: "sitemapUrls",
        name: "sitemapUrls",
        on: sitemap.sitemapUrls,
        warning: false,
    }) }}

    {{ forms.lightswitchField({
        label: "Asset Images in Sitemap" |t("seomatic"),
        instructions: "Whether the URLs to asset images in fields or matrix blocks should be included in the sitemap" |t("seomatic"),
        id: "sitemapAssets",
        name: "sitemapAssets",
        on: sitemap.sitemapAssets,
        warning: false,
    }) }}

    {{ forms.lightswitchField({
        label: "Asset Files in Sitemap" |t("seomatic"),
        instructions: "Whether the URLs to asset files such as `.pdf`, `.doc` and other indexable types should be in fields or matrix blocks should be included in the sitemap" |t("seomatic"),
        id: "sitemapFiles",
        name: "sitemapFiles",
        on: sitemap.sitemapFiles,
        warning: false,
    }) }}

    {{ forms.lightswitchField({
        label: "Sitemap Alt URLs" |t("seomatic"),
        instructions: "Whether URLs to alternate translations should be in fields or matrix blocks should be included in the sitemap" |t("seomatic"),
        id: "sitemapAltLinks",
        name: "sitemapAltLinks",
        on: sitemap.sitemapAltLinks,
        warning: false,
    }) }}

    {{ forms.selectField({
        label: "Change Frequency" |t("seomatic"),
        instructions: "How frequently the page is likely to change. This value provides general information to search engines and may not correlate exactly to how often they crawl the page." |t("seomatic"),
        id: "sitemapChangeFreq",
        name: "sitemapChangeFreq",
        options: {
            always: "Always" |t("seomatic"),
            hourly: "Hourly" |t("seomatic"),
            daily: "Daily" |t("seomatic"),
            weekly: "Weekly" |t("seomatic"),
            monthly: "Monthly" |t("seomatic"),
            yearly: "Yearly" |t("seomatic"),
            never : "Never" |t("seomatic"),
        },
        value: sitemap.sitemapChangeFreq,
    }) }}

    {{ forms.selectField({
        label: "Priority" |t("seomatic"),
        instructions: "The priority of this URL relative to other URLs on your site. This value does not affect how your pages are compared to pages on other sitesâ€”it only lets the search engines know which pages you deem most important for the crawlers." |t("seomatic"),
        id: "sitemapPriority",
        name: "sitemapPriority",
        options: {
            "1.0": "1.0",
            "0.9": "0.9",
            "0.8": "0.8",
            "0.7": "0.7",
            "0.6": "0.6",
            "0.5": "0.5",
            "0.4": "0.4",
            "0.3": "0.3",
            "0.2": "0.2",
            "0.1": "0.1",
            "0.0": "0.0",
        },
        value: sitemap.sitemapPriority,
    }) }}

    {{ forms.selectField({
        label: "Sitemap Limit" |t("seomatic"),
        instructions: "Controls a limit to how many entries will be in this sitemap. The sitemap entries will be sorted by modification date." |t("seomatic"),
        id: "sitemapLimit",
        name: "sitemapLimit",
        options: {
            "": "None",
            "1000": "1000",
            "500": "500",
            "200": "200",
            "100": "100",
            "50": "50",
            "10": "10",
            "5": "5",
        },
        value: sitemap.sitemapLimit,
    }) }}

    {{ forms.editableTableField({
        label: "Image Sitemap Fields" |t("seomatic"),
        instructions: "XXX" |t("seomatic"),
        id: 'sitemapImageFieldMap',
        name: 'sitemapImageFieldMap',
        required: false,
        cols: {
            property: {
                heading: "Image Sitemap Property" |t("seomatic"),
                type: "singleline",
                width: "30%",
            },
            field: {
                heading: "Source Field" |t("seomatic"),
                type: "select",
                width: "70%",
                options: {
                    "title": "Title"
                },
            },
        },
        rows: sitemap.sitemapImageFieldMap,
    }) }}

    {{ forms.editableTableField({
        label: "Video Sitemap Fields" |t("seomatic"),
        instructions: "XXX" |t("seomatic"),
        id: 'sitemapVideoFieldMap',
        name: 'sitemapVideoFieldMap',
        required: false,
        cols: {
            property: {
                heading: "Video Sitemap Property" |t("seomatic"),
                type: "singleline",
                width: "30%",
            },
            field: {
                heading: "Field" |t("seomatic"),
                type: "select",
                width: "70%",
                options: {
                    "title": "Title"
                },
            },
        },
        rows: sitemap.sitemapVideoFieldMap,
    }) }}

{% endnamespace %}
