{% from "seomatic/settings/_includes/macros.twig" import configWarning %}
{% import "_includes/forms" as forms %}

{% include "seomatic/_includes/googlePreview.twig" %}
{% namespace "globals" %}
    {{ forms.textField({
        label: "SEO Title" |t("seomatic"),
        instructions: "Make sure your title tag is explicit and contains your most important keywords. Be sure that each page has a unique title tag." |t("seomatic"),
        id: "seoTitle",
        name: "seoTitle",
        value: globals.seoTitle,
        class: "nicetext",
        maxlength: seomatic.config.maxTitleLength,
        showCharsLeft: true,
        warning: false,
    }) }}

    {{ forms.selectField({
        label: "Site Name Position" |t("seomatic"),
        instructions: "Where the Site Name is placed relative to the Title in the &lt;title&gt; tag" |t("seomatic"),
        id: "siteNamePosition",
        name: "siteNamePosition",
        options: {
            before: "Before" |t("seomatic"),
            after: "After" |t("seomatic"),
            none: "None" |t("seomatic"),
        },
        value: globals.siteNamePosition,
        warning: configWarning("siteNamePosition", "seomatic"),
    }) }}

    {{ forms.textAreaField({
        label: "SEO Description" |t("seomatic"),
        instructions: "SEO descriptions allow you to influence how your web pages are described and displayed in search results. Ensure that all of your web pages have a unique meta description that is explicit and contains your most important keywords." |t("seomatic"),
        id: "seoDescription",
        name: "seoDescription",
        value: globals.seoDescription,
        class: "nicetext",
        maxlength: seomatic.config.maxDescriptionLength,
        showCharsLeft: true,
        warning: false,
    }) }}

    {{ forms.textAreaField({
        label: "SEO Keywords" |t("seomatic"),
        instructions: "Google ignores SEO Keywords tag; though other search engines do look at it. Utilize it carefully, as improper or spammy use most likely will hurt you, or even have your site marked as spam." |t("seomatic"),
        id: "seoKeywords",
        name: "seoKeywords",
        value: globals.seoKeywords,
        class: "nicetext",
        maxlength: seomatic.config.maxDescriptionLength,
        showCharsLeft: true,
        warning: false,
    }) }}
{% endnamespace %}

{% namespace "settings" %}
    {{ forms.elementSelectField({
        label: "SEO Image"|t("seomatic"),
        instructions: "This is the image that will be used for display as the global website brand, as well as on Twitter Cards and Facebook OpenGraph that link to the website, if they are not specified. The image must be in JPG, PNG, or GIF format." |t("seomatic"),
        id: "seoImageIds",
        name: "seoImageIds",
        viewMode: "large",
        elements: seoImageElements,
        elementType: elementType,
        criteria: {
            kind: ["image"],
        },
        jsClass: 'Craft.AssetSelectInput',
        selectionLabel: "Select SEO Image" |t("seomatic"),
        sources: [],
        limit: 1,
        warning: false,
    }) }}
{% endnamespace %}

{% namespace "globals" %}
    {{ forms.textField({
        label: "SEO Image Description" |t("seomatic"),
        instructions: "Description of the SEO Image" |t("seomatic"),
        id: "seoImageDescription",
        name: "seoImageDescription",
        value: globals.seoImageDescription,
        class: "nicetext",
        warning: false,
    }) }}

    {{ forms.selectField({
        label: "Robots" |t("seomatic"),
        instructions: "The robots meta tag lets you utilize a granular, page-specific approach to controlling how an individual page should be indexed and served to users in search results." |t("seomatic"),
        id: "robots",
        name: "robots",
        options: {
            all: "All - Index this page and follow links (default)" |t("seomatic"),
            none: "None - Do not index or follow links on this page" |t("seomatic"),
            noindex: "No Index - Do not index this page" |t("seomatic"),
            nofollow: "No Follow - Do not follow links on this page" |t("seomatic"),
            nosnippet: "No Snippet - Do not show rich snippets from this page" |t("seomatic"),
            noarchive: "No Archive - Do not archived a cached version of this page" |t("seomatic"),
            noimageindex : "No Image Index - Do not index images on this page" |t("seomatic"),
        },
        value: globals.siteNamePosition,
    }) }}

    {{ forms.textField({
        label: "Canonical URL" |t("seomatic"),
        instructions: "Canonical URL" |t("seomatic"),
        id: "canonicalUrl",
        name: "canonicalUrl",
        value: globals.canonicalUrl,
        class: "nicetext",
        warning: false,
    }) }}

{% endnamespace %}
