{% import "_includes/forms" as forms %}

{% macro configWarning(setting) -%}
    {% if (craft.config.get(setting, 'seomatic')) |length %}
        {{ "This is being overridden by the {setting} config setting in your disqus.php config file." |t({
            setting: setting
        }) |raw }}
    {% endif %}
{%- endmacro %}
{% from _self import configWarning %}

{{ forms.textField({
    'label': 'Plugin name',
    'instructions': 'The public-facing name of the plugin',
    'id': 'pluginName',
    'name': 'pluginName',
    'value': settings['pluginName'],
    'warning': configWarning('pluginName')
}) }}

{{ forms.textField({
    'label': 'devMode <title> prefix',
    'instructions': 'If `devMode` is on, prefix the <title> with this string',
    'id': 'devModeTitlePrefix',
    'name': 'devModeTitlePrefix',
    'value': settings['devModeTitlePrefix'],
    'warning': configWarning('devModeTitlePrefix')
}) }}
